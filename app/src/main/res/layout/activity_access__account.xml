<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPage"
    android:background="#FFFFFF">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintTopLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout1"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/loginpage_bg1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            ></android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="150dp"
            android:layout_height="400dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/loginpage_bg2"
            android:layout_marginBottom="20dp"
            >
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@drawable/access_account_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:elevation="50dp"
            >

            <TextView
                android:id="@+id/AccessYourAccountTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Access Your Account"
                android:textSize="30sp"
                android:layout_marginTop="30dp"
                android:textColor="#12C8CE"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilePicImageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/mensclothes"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/AccessYourAccountTextView1"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"/>


            <ImageView
                android:id="@+id/emailImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view1"
                android:src="@drawable/email_grey_500_24dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"/>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profilePicImageView"
                android:background="#bfbfbf">
            </View>

            <TextView
                android:id="@+id/sendEmailTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/emailImageView"
                android:paddingLeft="60dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                app:layout_constraintTop_toBottomOf="@id/view1"
                android:text="Send an Email"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                />
            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sendEmailTextView"
                android:background="#bfbfbf">
            </View>

            <ImageView
                android:id="@+id/msgImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view2"
                android:src="@drawable/ic_phone_android_grey_500_24dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp"/>
            <TextView
                android:id="@+id/sendMessageTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/msgImageView"
                android:paddingLeft="60dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                app:layout_constraintTop_toBottomOf="@id/view2"
                android:text="Send an SMS"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                />
            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sendMessageTextView"
                android:background="#bfbfbf">
            </View>




            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/flotting_bg"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/ic_arrow_upward_white_24dp"
                    android:padding="5dp"
                    />

            </android.support.constraint.ConstraintLayout>


        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout4"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/loginpage_bg4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="20dp"
            android:elevation="50dp"
            >

            <TextView
                android:id="@+id/loginWithFbTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="20dp"
                android:text="Login with facebook"
                android:textColor="#12C8CE"/>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fbCircleView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintLeft_toRightOf="@id/loginWithFbTextView"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/facebook"
                android:elevation="5dp"

                app:civ_border_color="#FFFFFF"
                app:civ_border_width="3dp"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/flotting_bg"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/arrow_downward_white_24dp"
                    android:padding="5dp"
                    />
            </android.support.constraint.ConstraintLayout>


        </android.support.constraint.ConstraintLayout>


    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>